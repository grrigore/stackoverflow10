<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.grrigore.stackoverflow10.UserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/user_activity_margins"
            android:layout_marginTop="@dimen/user_activity_margins"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/user_profile_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/user_activity_margins"
                android:layout_weight="0.5" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:fontFamily="serif"
                android:text=""
                android:textSize="@dimen/text_size_user_activity" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/user_activity_margins"
            android:layout_marginLeft="@dimen/view_margin_size"
            android:layout_marginRight="@dimen/view_margin_size"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/user_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/user_activity_margins"
            android:fontFamily="serif"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/text_size_user_activity" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/user_activity_margins"
            android:layout_marginLeft="@dimen/view_margin_size"
            android:layout_marginRight="@dimen/view_margin_size"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_item_margins"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:layout_marginRight="@dimen/right_margin_size"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/bronze" />

            <TextView
                android:id="@+id/bronze_badges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:text=""
                android:textSize="@dimen/text_size_user_activity" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_item_margins"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:layout_marginRight="@dimen/right_margin_size"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/silver" />

            <TextView
                android:id="@+id/silver_badges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:text=""
                android:textSize="@dimen/text_size_user_activity" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_item_margins"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:layout_marginRight="@dimen/right_margin_size"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/gold" />

            <TextView
                android:id="@+id/gold_badges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:text=""
                android:textSize="@dimen/text_size_user_activity" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
